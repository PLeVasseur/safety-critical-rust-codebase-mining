{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "decision_file.schema.json",
  "title": "Verification Decision File",
  "description": "Schema for individual guideline verification decision files. Supports v1.x, v2.x, v3.x, and v4.0 formats.",
  "oneOf": [
    { "$ref": "#/$defs/decision_file_v1" },
    { "$ref": "#/$defs/decision_file_v1_1" },
    { "$ref": "#/$defs/decision_file_v1_2" },
    { "$ref": "#/$defs/decision_file_v2" },
    { "$ref": "#/$defs/decision_file_v2_1" },
    { "$ref": "#/$defs/decision_file_v2_2" },
    { "$ref": "#/$defs/decision_file_v3" },
    { "$ref": "#/$defs/decision_file_v3_1" },
    { "$ref": "#/$defs/decision_file_v3_2" },
    { "$ref": "#/$defs/decision_file_v4" }
  ],
  "$defs": {
    "misra_add6_snapshot": {
      "type": "object",
      "description": "MISRA ADD-6 data snapshot captured at decision time",
      "required": ["misra_category", "decidability", "scope", "rationale_codes"],
      "properties": {
        "misra_category": {
          "type": "string",
          "enum": ["Required", "Advisory", "Mandatory"],
          "description": "Original MISRA C category"
        },
        "decidability": {
          "type": "string",
          "enum": ["Decidable", "Undecidable", "n/a"],
          "description": "Whether static analysis can check this guideline"
        },
        "scope": {
          "type": "string",
          "enum": ["STU", "System", "n/a"],
          "description": "Analysis scope: STU (single translation unit) or System"
        },
        "rationale_codes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["UB", "IDB", "CQ", "DC"]
          },
          "description": "Why this guideline exists: UB, IDB, CQ, DC"
        },
        "applicability_all_rust": {
          "type": "string",
          "enum": ["Yes", "No", "Partial"],
          "description": "MISRA's assessment: does this guideline apply to all Rust?"
        },
        "applicability_safe_rust": {
          "type": "string",
          "enum": ["Yes", "No", "Partial"],
          "description": "MISRA's assessment: does this guideline apply to safe Rust?"
        },
        "adjusted_category": {
          "type": "string",
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a"],
          "description": "MISRA's adjusted category for Rust"
        },
        "comment": {
          "type": ["string", "null"],
          "description": "MISRA's Rust-specific notes"
        }
      }
    },
    "decision_file_v1": {
      "type": "object",
      "description": "v1.0 format: Flat decision structure",
      "required": [
        "schema_version",
        "guideline_id",
        "decision",
        "confidence",
        "fls_rationale_type",
        "accepted_matches",
        "rejected_matches",
        "search_tools_used",
        "recorded_at"
      ],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "1.0",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "MISRA guideline ID (e.g., 'Rule 10.1', 'Dir 4.1')"
        },
        "decision": {
          "type": "string",
          "enum": ["accept_with_modifications", "accept_no_matches", "accept_existing", "reject"],
          "description": "The verification decision type"
        },
        "confidence": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "description": "Confidence level in the verification decision"
        },
        "fls_rationale_type": {
          "type": "string",
          "enum": ["direct_mapping", "rust_alternative", "rust_prevents", "no_equivalent", "partial_mapping"],
          "description": "Type of relationship between the guideline and FLS"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as matches",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
          "description": "FLS sections explicitly rejected",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Additional notes about the decision"
        },
        "search_tools_used": {
          "type": "array",
          "minItems": 1,
          "description": "Search tools used during verification (at least one required)",
          "items": { "$ref": "#/$defs/search_tool_usage" }
        },
        "proposed_applicability_change": {
          "type": ["object", "null"],
          "description": "Proposed change to applicability fields (requires human approval)",
          "if": { "type": "object" },
          "then": {
            "required": ["field", "current_value", "proposed_value", "rationale"],
            "properties": {
              "field": {
                "type": "string",
                "enum": ["applicability_all_rust", "applicability_safe_rust", "fls_rationale_type"]
              },
              "current_value": { "type": "string" },
              "proposed_value": { "type": "string" },
              "rationale": { "type": "string" }
            }
          }
        },
        "recorded_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when decision was recorded"
        }
      }
    },
    "decision_file_v2": {
      "type": "object",
      "description": "v2.0 format: Per-context decision structure",
      "required": [
        "schema_version",
        "guideline_id",
        "all_rust",
        "safe_rust",
        "recorded_at"
      ],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "2.0",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "MISRA guideline ID (e.g., 'Rule 10.1', 'Dir 4.1')"
        },
        "all_rust": {
          "oneOf": [
            { "$ref": "#/$defs/context_decision_complete" },
            { "$ref": "#/$defs/context_decision_scaffolded" }
          ],
          "description": "Verification decision for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "oneOf": [
            { "$ref": "#/$defs/context_decision_complete" },
            { "$ref": "#/$defs/context_decision_scaffolded" }
          ],
          "description": "Verification decision for SAFE Rust code only"
        },
        "recorded_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp of last update (null if never recorded)"
        }
      }
    },
    "decision_file_v1_1": {
      "type": "object",
      "description": "v1.1 format: v1.0 + MISRA ADD-6 snapshot (enriched via migration)",
      "required": [
        "schema_version",
        "guideline_id",
        "misra_add6_snapshot",
        "decision",
        "confidence",
        "fls_rationale_type",
        "accepted_matches",
        "rejected_matches",
        "search_tools_used",
        "recorded_at"
      ],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "1.1",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "MISRA guideline ID (e.g., 'Rule 10.1', 'Dir 4.1')"
        },
        "misra_add6_snapshot": {
          "$ref": "#/$defs/misra_add6_snapshot",
          "description": "MISRA ADD-6 data captured at decision time"
        },
        "decision": {
          "type": "string",
          "enum": ["accept_with_modifications", "accept_no_matches", "accept_existing", "reject"],
          "description": "The verification decision type"
        },
        "confidence": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "description": "Confidence level in the verification decision"
        },
        "fls_rationale_type": {
          "type": "string",
          "enum": ["direct_mapping", "rust_alternative", "rust_prevents", "no_equivalent", "partial_mapping"],
          "description": "Type of relationship between the guideline and FLS"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as matches",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
          "description": "FLS sections explicitly rejected",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Additional notes about the decision"
        },
        "search_tools_used": {
          "type": "array",
          "minItems": 1,
          "description": "Search tools used during verification",
          "items": { "$ref": "#/$defs/search_tool_usage" }
        },
        "proposed_applicability_change": {
          "type": ["object", "null"],
          "description": "Proposed change to applicability fields (requires human approval)"
        },
        "recorded_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when decision was recorded"
        }
      }
    },
    "decision_file_v2_1": {
      "type": "object",
      "description": "v2.1 format: v2.0 + MISRA ADD-6 snapshot (enriched via migration)",
      "required": [
        "schema_version",
        "guideline_id",
        "misra_add6_snapshot",
        "all_rust",
        "safe_rust",
        "recorded_at"
      ],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "2.1",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "MISRA guideline ID (e.g., 'Rule 10.1', 'Dir 4.1')"
        },
        "misra_add6_snapshot": {
          "$ref": "#/$defs/misra_add6_snapshot",
          "description": "MISRA ADD-6 data captured at decision time"
        },
        "all_rust": {
          "oneOf": [
            { "$ref": "#/$defs/context_decision_complete" },
            { "$ref": "#/$defs/context_decision_scaffolded" }
          ],
          "description": "Verification decision for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "oneOf": [
            { "$ref": "#/$defs/context_decision_complete" },
            { "$ref": "#/$defs/context_decision_scaffolded" }
          ],
          "description": "Verification decision for SAFE Rust code only"
        },
        "recorded_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp of last update (null if never recorded)"
        }
      }
    },
    "decision_file_v3": {
      "type": "object",
      "description": "v3.0 format: Per-context + MISRA ADD-6 snapshot, created by fresh verification (structurally same as v2.1)",
      "required": [
        "schema_version",
        "guideline_id",
        "misra_add6_snapshot",
        "all_rust",
        "safe_rust",
        "recorded_at"
      ],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "3.0",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "MISRA guideline ID (e.g., 'Rule 10.1', 'Dir 4.1')"
        },
        "misra_add6_snapshot": {
          "$ref": "#/$defs/misra_add6_snapshot",
          "description": "MISRA ADD-6 data captured at decision time"
        },
        "all_rust": {
          "oneOf": [
            { "$ref": "#/$defs/context_decision_complete" },
            { "$ref": "#/$defs/context_decision_scaffolded" }
          ],
          "description": "Verification decision for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "oneOf": [
            { "$ref": "#/$defs/context_decision_complete" },
            { "$ref": "#/$defs/context_decision_scaffolded" }
          ],
          "description": "Verification decision for SAFE Rust code only"
        },
        "recorded_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp of last update (null if never recorded)"
        }
      }
    },
    "decision_file_v3_1": {
      "type": "object",
      "description": "v3.1 format: v3.0 + per-context analysis_summary for audit trail",
      "required": [
        "schema_version",
        "guideline_id",
        "misra_add6_snapshot",
        "all_rust",
        "safe_rust",
        "recorded_at"
      ],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "3.1",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "MISRA guideline ID (e.g., 'Rule 10.1', 'Dir 4.1')"
        },
        "misra_add6_snapshot": {
          "$ref": "#/$defs/misra_add6_snapshot",
          "description": "MISRA ADD-6 data captured at decision time"
        },
        "all_rust": {
          "oneOf": [
            { "$ref": "#/$defs/context_decision_complete_v3_1" },
            { "$ref": "#/$defs/context_decision_scaffolded" }
          ],
          "description": "Verification decision for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "oneOf": [
            { "$ref": "#/$defs/context_decision_complete_v3_1" },
            { "$ref": "#/$defs/context_decision_scaffolded" }
          ],
          "description": "Verification decision for SAFE Rust code only"
        },
        "recorded_at": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "ISO 8601 timestamp of last update (null if never recorded)"
        }
      }
    },
    "analysis_summary": {
      "type": "object",
      "description": "Context-specific analysis summary for audit trail",
      "required": ["misra_concern", "rust_analysis"],
      "properties": {
        "misra_concern": {
          "type": "string",
          "minLength": 1,
          "description": "The MISRA safety concern as it applies to this context (may indicate 'Not applicable' if the concern doesn't exist in this context)"
        },
        "rust_analysis": {
          "type": "string",
          "minLength": 1,
          "description": "How Rust handles this concern in this context, with FLS references"
        }
      }
    },
    "context_decision_complete": {
      "type": "object",
      "description": "Complete verification decision for a specific Rust context (v3.0 - no analysis_summary)",
      "required": [
        "decision",
        "applicability",
        "adjusted_category",
        "rationale_type",
        "confidence",
        "accepted_matches",
        "rejected_matches",
        "search_tools_used"
      ],
      "properties": {
        "decision": {
          "type": "string",
          "enum": ["accept_with_modifications", "accept_no_matches", "accept_existing", "reject"],
          "description": "The verification decision type"
        },
        "applicability": {
          "type": "string",
          "enum": ["yes", "no", "partial"],
          "description": "Whether the MISRA guideline applies in this context (aligns with MISRA ADD-6)"
        },
        "adjusted_category": {
          "type": "string",
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a"],
          "description": "MISRA's adjusted category for Rust"
        },
        "rationale_type": {
          "type": "string",
          "enum": ["direct_mapping", "partial_mapping", "rust_alternative", "rust_prevents", "no_equivalent"],
          "description": "Type of relationship between the guideline and FLS"
        },
        "confidence": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "description": "Confidence level in the verification decision"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as matches for this context",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
          "description": "FLS sections rejected for this context",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "search_tools_used": {
          "type": "array",
          "minItems": 4,
          "description": "Search tools used during verification (at least 4 required per context)",
          "items": { "$ref": "#/$defs/search_tool_usage" }
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Context-specific notes about the decision"
        },
        "proposed_change": {
          "type": "object",
          "description": "Proposed change to a context field (requires human approval)",
          "required": ["field", "current_value", "proposed_value", "rationale"],
          "properties": {
            "field": {
              "type": "string",
              "enum": ["applicability", "adjusted_category", "rationale_type"]
            },
            "current_value": { "type": "string" },
            "proposed_value": { "type": "string" },
            "rationale": { "type": "string" }
          }
        }
      }
    },
    "context_decision_complete_v3_1": {
      "type": "object",
      "description": "Complete verification decision for a specific Rust context (v3.1 - includes required analysis_summary)",
      "required": [
        "decision",
        "applicability",
        "adjusted_category",
        "rationale_type",
        "confidence",
        "analysis_summary",
        "accepted_matches",
        "rejected_matches",
        "search_tools_used"
      ],
      "properties": {
        "decision": {
          "type": "string",
          "enum": ["accept_with_modifications", "accept_no_matches", "accept_existing", "reject"],
          "description": "The verification decision type"
        },
        "applicability": {
          "type": "string",
          "enum": ["yes", "no", "partial"],
          "description": "Whether the MISRA guideline applies in this context (aligns with MISRA ADD-6)"
        },
        "adjusted_category": {
          "type": "string",
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a"],
          "description": "MISRA's adjusted category for Rust"
        },
        "rationale_type": {
          "type": "string",
          "enum": ["direct_mapping", "partial_mapping", "rust_alternative", "rust_prevents", "no_equivalent"],
          "description": "Type of relationship between the guideline and FLS"
        },
        "confidence": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "description": "Confidence level in the verification decision"
        },
        "analysis_summary": {
          "$ref": "#/$defs/analysis_summary",
          "description": "Context-specific MISRA concern and Rust analysis for audit trail"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as matches for this context",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
          "description": "FLS sections rejected for this context",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "search_tools_used": {
          "type": "array",
          "minItems": 4,
          "description": "Search tools used during verification (at least 4 required per context)",
          "items": { "$ref": "#/$defs/search_tool_usage" }
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Context-specific notes about the decision"
        },
        "proposed_change": {
          "type": "object",
          "description": "Proposed change to a context field (requires human approval)",
          "required": ["field", "current_value", "proposed_value", "rationale"],
          "properties": {
            "field": {
              "type": "string",
              "enum": ["applicability", "adjusted_category", "rationale_type"]
            },
            "current_value": { "type": "string" },
            "proposed_value": { "type": "string" },
            "rationale": { "type": "string" }
          }
        }
      }
    },
    "context_decision_scaffolded": {
      "type": "object",
      "description": "Scaffolded (not yet recorded) context decision",
      "required": [
        "decision",
        "applicability",
        "adjusted_category",
        "rationale_type",
        "confidence",
        "accepted_matches",
        "rejected_matches",
        "search_tools_used",
        "notes"
      ],
      "properties": {
        "decision": {
          "type": "null",
          "description": "Not yet recorded"
        },
        "applicability": {
          "type": "null"
        },
        "adjusted_category": {
          "type": "null"
        },
        "rationale_type": {
          "type": "null"
        },
        "confidence": {
          "type": "null"
        },
        "accepted_matches": {
          "type": "array",
          "maxItems": 0
        },
        "rejected_matches": {
          "type": "array",
          "maxItems": 0
        },
        "search_tools_used": {
          "type": "array",
          "maxItems": 0
        },
        "notes": {
          "type": "null"
        }
      }
    },
    "fls_match": {
      "type": "object",
      "required": ["fls_id", "fls_title", "category", "score", "reason"],
      "properties": {
        "fls_id": {
          "type": "string",
          "pattern": "^fls_[a-zA-Z0-9]+$",
          "description": "FLS identifier"
        },
        "fls_title": {
          "type": "string",
          "description": "Human-readable title of the FLS section"
        },
        "category": {
          "type": "integer",
          "enum": [0, -1, -2, -3, -4, -5, -6, -7, -8],
          "description": "Category code: 0=section, -1=general, -2=legality_rules, -3=dynamic_semantics, -4=undefined_behavior, -5=implementation_requirements, -6=implementation_permissions, -7=examples, -8=syntax"
        },
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Similarity score (0-1)"
        },
        "reason": {
          "type": "string",
          "minLength": 1,
          "description": "Justification for accepting/rejecting - must not be empty"
        }
      }
    },
    "search_tool_usage": {
      "type": "object",
      "description": "Record of a search tool used during verification",
      "required": ["search_id", "tool", "query", "result_count"],
      "properties": {
        "search_id": {
          "type": "string",
          "format": "uuid",
          "description": "Unique identifier for this search execution (UUID4)"
        },
        "tool": {
          "type": "string",
          "enum": ["search-fls", "search-fls-deep", "search-rust-context", "recompute-similarity", "read-fls-chapter", "grep-fls"],
          "description": "The search tool used during verification"
        },
        "query": {
          "type": "string",
          "description": "The search query, guideline ID, or file path used"
        },
        "result_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of results returned"
        }
      }
    },
    "context_decision_complete_v4": {
      "type": "object",
      "description": "Complete verification decision with paragraph coverage fields (v4.0)",
      "required": [
        "decision",
        "applicability",
        "adjusted_category",
        "rationale_type",
        "confidence",
        "analysis_summary",
        "accepted_matches",
        "rejected_matches",
        "search_tools_used",
        "paragraph_match_count",
        "section_match_count"
      ],
      "properties": {
        "decision": {
          "type": "string",
          "enum": ["accept_with_modifications", "accept_no_matches", "accept_existing", "reject"],
          "description": "The verification decision type"
        },
        "applicability": {
          "type": "string",
          "enum": ["yes", "no", "partial"],
          "description": "Whether the MISRA guideline applies in this context (aligns with MISRA ADD-6)"
        },
        "adjusted_category": {
          "type": "string",
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a"],
          "description": "MISRA's adjusted category for Rust"
        },
        "rationale_type": {
          "type": "string",
          "enum": ["direct_mapping", "partial_mapping", "rust_alternative", "rust_prevents", "no_equivalent"],
          "description": "Type of relationship between the guideline and FLS"
        },
        "confidence": {
          "type": "string",
          "enum": ["high", "medium", "low"],
          "description": "Confidence level in the verification decision"
        },
        "analysis_summary": {
          "$ref": "#/$defs/analysis_summary",
          "description": "Context-specific MISRA concern and Rust analysis for audit trail"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as matches for this context",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
