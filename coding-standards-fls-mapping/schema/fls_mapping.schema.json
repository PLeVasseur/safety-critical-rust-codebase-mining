{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/eclipse-iceoryx/iceoryx2/coding-standards-fls-mapping/schema/fls_mapping.schema.json",
  "title": "Coding Standard to FLS Mapping",
  "description": "Schema for mapping coding standard guidelines (MISRA/CERT) to Ferrocene Language Specification (FLS) sections. Supports v1.x, v2.x, v3.x, and v4.0 formats.",
  "type": "object",
  "required": [
    "standard",
    "standard_version",
    "fls_version",
    "mapping_date",
    "mappings"
  ],
  "properties": {
    "standard": {
      "type": "string",
      "enum": ["MISRA-C", "MISRA-C++", "CERT-C", "CERT-C++"],
      "description": "The coding standard being mapped"
    },
    "standard_version": {
      "type": "string",
      "description": "Version of the coding standard (e.g., '2025', '2023')"
    },
    "fls_version": {
      "type": "string",
      "description": "Version of the Ferrocene Language Specification used for mapping"
    },
    "mapping_date": {
      "type": "string",
      "format": "date",
      "description": "Date when the mapping was created/updated (YYYY-MM-DD)"
    },
    "methodology": {
      "type": "string",
      "description": "Description of how mappings were determined"
    },
    "statistics": {
      "type": "object",
      "description": "Summary counts of mapping status",
      "properties": {
        "total_guidelines": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of guidelines in the standard"
        },
        "mapped": {
          "type": "integer",
          "minimum": 0,
          "description": "Guidelines with FLS mappings (direct or partial)"
        },
        "unmapped": {
          "type": "integer",
          "minimum": 0,
          "description": "Guidelines awaiting mapping"
        },
        "not_applicable": {
          "type": "integer",
          "minimum": 0,
          "description": "Guidelines not applicable to Rust"
        },
        "rust_prevents": {
          "type": "integer",
          "minimum": 0,
          "description": "Guidelines where Rust's design prevents the issue"
        }
      }
    },
    "mappings": {
      "type": "array",
      "description": "Array of guideline-to-FLS mappings (can contain mixed schema versions)",
      "items": {
        "oneOf": [
          { "$ref": "#/$defs/mapping_entry_v1" },
          { "$ref": "#/$defs/mapping_entry_v1_1" },
          { "$ref": "#/$defs/mapping_entry_v1_2" },
          { "$ref": "#/$defs/mapping_entry_v2" },
          { "$ref": "#/$defs/mapping_entry_v2_1" },
          { "$ref": "#/$defs/mapping_entry_v2_2" },
          { "$ref": "#/$defs/mapping_entry_v3" },
          { "$ref": "#/$defs/mapping_entry_v3_2" },
          { "$ref": "#/$defs/mapping_entry_v4" }
        ]
      }
    }
  },
  "$defs": {
    "misra_add6": {
      "type": "object",
      "description": "MISRA ADD-6 Rust applicability data for this guideline",
      "required": ["misra_category", "decidability", "scope", "rationale_codes"],
      "properties": {
        "misra_category": {
          "type": "string",
          "enum": ["Required", "Advisory", "Mandatory"],
          "description": "Original MISRA C category"
        },
        "decidability": {
          "type": "string",
          "enum": ["Decidable", "Undecidable", "n/a"],
          "description": "Whether static analysis can check this guideline"
        },
        "scope": {
          "type": "string",
          "enum": ["STU", "System", "n/a"],
          "description": "Analysis scope: STU (single translation unit) or System"
        },
        "rationale_codes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["UB", "IDB", "CQ", "DC"]
          },
          "description": "Why this guideline exists: UB (Undefined Behaviour), IDB (Implementation-defined Behaviour), CQ (Code Quality), DC (Design Consideration)"
        },
        "applicability_all_rust": {
          "type": "string",
          "enum": ["Yes", "No", "Partial"],
          "description": "MISRA's assessment: does this guideline apply to all Rust?"
        },
        "applicability_safe_rust": {
          "type": "string",
          "enum": ["Yes", "No", "Partial"],
          "description": "MISRA's assessment: does this guideline apply to safe Rust?"
        },
        "adjusted_category": {
          "type": "string",
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a"],
          "description": "MISRA's adjusted category for Rust"
        },
        "comment": {
          "type": ["string", "null"],
          "description": "MISRA's Rust-specific notes"
        },
        "source_version": {
          "type": "string",
          "description": "ADD-6 version identifier (e.g., 'ADD-6:2025')"
        }
      }
    },
    "fls_match": {
      "type": "object",
      "required": ["fls_id", "category", "reason"],
      "properties": {
        "fls_id": {
          "type": "string",
          "pattern": "^fls_[a-zA-Z0-9]+$",
          "description": "The FLS ID (section-level or paragraph-level)"
        },
        "category": {
          "type": "integer",
          "enum": [0, -1, -2, -3, -4, -5, -6, -7, -8],
          "description": "Category code: 0=section, -1=general, -2=legality_rules, -3=dynamic_semantics, -4=undefined_behavior, -5=implementation_requirements, -6=implementation_permissions, -7=examples, -8=syntax"
        },
        "fls_section": {
          "type": ["string", "null"],
          "description": "Human-readable FLS section number (e.g., '6.15' or '6.-2.1'). May be null for FLS IDs that don't map to numbered sections."
        },
        "fls_title": {
          "type": "string",
          "description": "Human-readable title of the FLS section"
        },
        "score": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 1,
          "description": "The similarity score (0-1) that was calculated for this match. Null for manually-added paragraph IDs."
        },
        "reason": {
          "type": "string",
          "description": "Why this FLS section was chosen - should reference specific FLS legality rules or content"
        }
      }
    },
    "applicability_context": {
      "type": "object",
      "description": "Applicability and verification data for a specific Rust context (all_rust or safe_rust)",
      "required": ["applicability", "rationale_type"],
      "properties": {
        "applicability": {
          "type": "string",
          "enum": ["yes", "no", "partial"],
          "description": "Whether the MISRA guideline applies in this context (aligns with MISRA ADD-6)"
        },
        "adjusted_category": {
          "type": ["string", "null"],
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a", null],
          "description": "MISRA's adjusted category for Rust (from MISRA ADD-6)"
        },
        "rationale_type": {
          "type": "string",
          "enum": ["direct_mapping", "partial_mapping", "rust_alternative", "rust_prevents", "no_equivalent"],
          "description": "Explains the relationship between the guideline and FLS sections"
        },
        "confidence": {
          "type": ["string", "null"],
          "enum": ["high", "medium", "low", null],
          "description": "Confidence level in the mapping accuracy"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as relevant for this context",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
          "description": "FLS sections considered but rejected for this context",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "verified": {
          "type": "boolean",
          "description": "Whether this context has been verified"
        },
        "verified_by_session": {
          "type": ["integer", "null"],
          "description": "Session ID that verified this context"
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Context-specific notes"
        },
        "paragraph_match_count": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "Count of paragraph-level matches (category != 0). Required in v1.2+, v2.2+, v3.2+, v4.0."
        },
        "section_match_count": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "Count of section-level matches (category = 0). Required in v1.2+, v2.2+, v3.2+, v4.0."
        },
        "paragraph_level_waiver": {
          "type": ["string", "null"],
          "minLength": 50,
          "description": "If no paragraph matches, explains why (min 50 chars). Null if has paragraphs. Required in v4.0 if paragraph_match_count = 0."
        }
      }
    },
    "mapping_entry_v1": {
      "type": "object",
      "description": "v1.0 format: Flat structure with shared applicability fields",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "applicability_all_rust", "applicability_safe_rust"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "1.0",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "applicability_all_rust": {
          "type": "string",
          "enum": ["direct", "partial", "not_applicable", "rust_prevents", "unmapped"],
          "description": "How this guideline applies to ALL Rust code (including unsafe)"
        },
        "applicability_safe_rust": {
          "type": "string",
          "enum": ["direct", "partial", "not_applicable", "rust_prevents", "unmapped"],
          "description": "How this guideline applies to SAFE Rust code only"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as matches (shared across contexts in v1)",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
          "description": "FLS sections rejected despite high similarity (shared across contexts in v1)",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "fls_rationale_type": {
          "type": ["string", "null"],
          "enum": ["direct_mapping", "rust_alternative", "rust_prevents", "no_equivalent", "partial_mapping", null],
          "description": "Explains the relationship between the guideline and the FLS sections"
        },
        "misra_rust_category": {
          "type": ["string", "null"],
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a", null],
          "description": "MISRA's adjusted category for Rust (from MISRA ADD-6)"
        },
        "misra_rust_comment": {
          "type": ["string", "null"],
          "description": "MISRA's comment on Rust applicability (from MISRA ADD-6)"
        },
        "confidence": {
          "type": ["string", "null"],
          "enum": ["high", "medium", "low", null],
          "description": "Confidence level in the mapping accuracy"
        },
        "notes": {
          "type": ["string", "null"],
          "description": "High-level summary of the mapping rationale"
        }
      }
    },
    "mapping_entry_v2": {
      "type": "object",
      "description": "v2.0 format: Per-context structure with independent verification for all_rust and safe_rust",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "all_rust", "safe_rust"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "2.0",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "all_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for SAFE Rust code only"
        }
      }
    },
    "mapping_entry_v1_1": {
      "type": "object",
      "description": "v1.1 format: v1.0 + MISRA ADD-6 data (enriched via migration)",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "applicability_all_rust", "applicability_safe_rust", "misra_add6"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "1.1",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "misra_add6": {
          "$ref": "#/$defs/misra_add6",
          "description": "MISRA ADD-6 Rust applicability data"
        },
        "applicability_all_rust": {
          "type": "string",
          "enum": ["direct", "partial", "not_applicable", "rust_prevents", "unmapped"],
          "description": "How this guideline applies to ALL Rust code (including unsafe)"
        },
        "applicability_safe_rust": {
          "type": "string",
          "enum": ["direct", "partial", "not_applicable", "rust_prevents", "unmapped"],
          "description": "How this guideline applies to SAFE Rust code only"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as matches (shared across contexts in v1)",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
          "description": "FLS sections rejected despite high similarity (shared across contexts in v1)",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "fls_rationale_type": {
          "type": ["string", "null"],
          "enum": ["direct_mapping", "rust_alternative", "rust_prevents", "no_equivalent", "partial_mapping", null],
          "description": "Explains the relationship between the guideline and the FLS sections"
        },
        "misra_rust_category": {
          "type": ["string", "null"],
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a", null],
          "description": "MISRA's adjusted category for Rust (from MISRA ADD-6)"
        },
        "misra_rust_comment": {
          "type": ["string", "null"],
          "description": "MISRA's comment on Rust applicability (from MISRA ADD-6)"
        },
        "confidence": {
          "type": ["string", "null"],
          "enum": ["high", "medium", "low", null],
          "description": "Confidence level in the mapping accuracy"
        },
        "notes": {
          "type": ["string", "null"],
          "description": "High-level summary of the mapping rationale"
        }
      }
    },
    "mapping_entry_v2_1": {
      "type": "object",
      "description": "v2.1 format: v2.0 + MISRA ADD-6 data (enriched via migration)",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "misra_add6", "all_rust", "safe_rust"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "2.1",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "misra_add6": {
          "$ref": "#/$defs/misra_add6",
          "description": "MISRA ADD-6 Rust applicability data"
        },
        "all_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for SAFE Rust code only"
        }
      }
    },
    "mapping_entry_v3": {
      "type": "object",
      "description": "v3.0 format: Per-context + MISRA ADD-6, created by fresh verification (structurally same as v2.1)",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "misra_add6", "all_rust", "safe_rust"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "3.0",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "misra_add6": {
          "$ref": "#/$defs/misra_add6",
          "description": "MISRA ADD-6 Rust applicability data"
        },
        "all_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for SAFE Rust code only"
        }
      }
    },
    "mapping_entry_v1_2": {
      "type": "object",
      "description": "v1.2 format: v1.1 + paragraph coverage fields (migrated with waiver if needed)",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "applicability_all_rust", "applicability_safe_rust", "misra_add6", "paragraph_match_count", "section_match_count"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "1.2",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "misra_add6": {
          "$ref": "#/$defs/misra_add6",
          "description": "MISRA ADD-6 Rust applicability data"
        },
        "applicability_all_rust": {
          "type": "string",
          "enum": ["direct", "partial", "not_applicable", "rust_prevents", "unmapped"],
          "description": "How this guideline applies to ALL Rust code (including unsafe)"
        },
        "applicability_safe_rust": {
          "type": "string",
          "enum": ["direct", "partial", "not_applicable", "rust_prevents", "unmapped"],
          "description": "How this guideline applies to SAFE Rust code only"
        },
        "accepted_matches": {
          "type": "array",
          "description": "FLS sections accepted as matches (shared across contexts in v1)",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "rejected_matches": {
          "type": "array",
          "description": "FLS sections rejected despite high similarity (shared across contexts in v1)",
          "items": { "$ref": "#/$defs/fls_match" }
        },
        "fls_rationale_type": {
          "type": ["string", "null"],
          "enum": ["direct_mapping", "rust_alternative", "rust_prevents", "no_equivalent", "partial_mapping", null],
          "description": "Explains the relationship between the guideline and the FLS sections"
        },
        "misra_rust_category": {
          "type": ["string", "null"],
          "enum": ["required", "advisory", "recommended", "disapplied", "implicit", "n_a", null],
          "description": "MISRA's adjusted category for Rust (from MISRA ADD-6)"
        },
        "misra_rust_comment": {
          "type": ["string", "null"],
          "description": "MISRA's comment on Rust applicability (from MISRA ADD-6)"
        },
        "confidence": {
          "type": ["string", "null"],
          "enum": ["high", "medium", "low", null],
          "description": "Confidence level in the mapping accuracy"
        },
        "notes": {
          "type": ["string", "null"],
          "description": "High-level summary of the mapping rationale"
        },
        "paragraph_match_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of paragraph-level matches (category != 0) in accepted_matches"
        },
        "section_match_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of section-level matches (category = 0) in accepted_matches"
        },
        "paragraph_level_waiver": {
          "type": ["string", "null"],
          "description": "If no paragraph matches, explains why (min 50 chars for non-migration waivers). Null if has paragraphs."
        }
      }
    },
    "mapping_entry_v2_2": {
      "type": "object",
      "description": "v2.2 format: v2.1 + paragraph coverage fields per context (migrated with waiver if needed)",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "misra_add6", "all_rust", "safe_rust"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "2.2",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "misra_add6": {
          "$ref": "#/$defs/misra_add6",
          "description": "MISRA ADD-6 Rust applicability data"
        },
        "all_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for SAFE Rust code only"
        }
      }
    },
    "mapping_entry_v3_2": {
      "type": "object",
      "description": "v3.2 format: v3.0/v3.1 + paragraph coverage fields per context (migrated with waiver if needed)",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "misra_add6", "all_rust", "safe_rust"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "3.2",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "misra_add6": {
          "$ref": "#/$defs/misra_add6",
          "description": "MISRA ADD-6 Rust applicability data"
        },
        "all_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for ALL Rust code (including unsafe)"
        },
        "safe_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for SAFE Rust code only"
        }
      }
    },
    "mapping_entry_v4": {
      "type": "object",
      "description": "v4.0 format: Per-context with enforced paragraph-level requirements. Fresh verification must have paragraph matches or explicit waiver.",
      "required": ["schema_version", "guideline_id", "guideline_title", "guideline_type", "misra_add6", "all_rust", "safe_rust"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "4.0",
          "description": "Schema version identifier"
        },
        "guideline_id": {
          "type": "string",
          "description": "ID from the coding standard (e.g., 'Rule 1.1', 'MEM30-C')"
        },
        "guideline_title": {
          "type": "string",
          "description": "Title/summary of the guideline"
        },
        "guideline_type": {
          "type": "string",
          "enum": ["rule", "directive", "recommendation"],
          "description": "Type of guideline"
        },
        "misra_add6": {
          "$ref": "#/$defs/misra_add6",
          "description": "MISRA ADD-6 Rust applicability data"
        },
        "all_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for ALL Rust code (including unsafe). Must have paragraph_match_count > 0 OR paragraph_level_waiver."
        },
        "safe_rust": {
          "$ref": "#/$defs/applicability_context",
          "description": "Applicability and verification data for SAFE Rust code only. Must have paragraph_match_count > 0 OR paragraph_level_waiver."
        }
      }
    }
  }
}
